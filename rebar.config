%% -*- mode: erlang -*-
%% ex: ft=erlang ts=2 sw=2 et
{deps, 
 [
  {vmstats, ".*", 
   {git, "https://github.com/stwind/vmstats.git", {branch, "master"}}},
  {riak_sysmon, ".*", 
   {git, "https://github.com/basho/riak_sysmon.git", {branch, "master"}}}
 ]}.

{erl_opts, [warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_untyped_record, debug_info]}.
